rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    // Checks if the user is an admin by looking up their email in the admin_users collection
    function isAdmin() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/admin_users/$(request.auth.token.email)) &&
             get(/databases/$(database)/documents/admin_users/$(request.auth.token.email)).data.role == 'Administrator';
    }

    // --- Collection Rules ---

    // 1. Admin Users: Only Admins can manage; Users can read their own entry
    match /admin_users/{userEmail} {
      allow read: if isSignedIn() && (request.auth.token.email == userEmail || isAdmin());
      allow write: if isAdmin();
    }

    // 2. Employees: Employees can read their own profile (by email match); Admins manage all
    match /employees/{employeeId} {
      allow read: if isSignedIn() && (resource.data.email == request.auth.token.email || isAdmin());
      allow update: if isSignedIn() && (resource.data.email == request.auth.token.email || isAdmin());
      allow create, delete: if isAdmin();
    }

    // 3. Loan Applications: Employees can read/write applications they created/assigned
    match /loan_applications/{appId} {
      allow read: if isSignedIn() && (resource.data.employeeEmail == request.auth.token.email || isAdmin());
      allow create: if isSignedIn() && (request.resource.data.employeeEmail == request.auth.token.email || isAdmin());
      allow update, delete: if isSignedIn() && (resource.data.employeeEmail == request.auth.token.email || isAdmin());
    }

    // 4. Loans: Employees can read/update loans assigned to them
    match /loans/{loanId} {
      allow read: if isSignedIn() && (resource.data.employeeEmail == request.auth.token.email || isAdmin());
      allow create: if isSignedIn() && (request.resource.data.employeeEmail == request.auth.token.email || isAdmin());
      allow update: if isSignedIn() && (resource.data.employeeEmail == request.auth.token.email || isAdmin());
      allow delete: if isAdmin(); // Only Admins should delete active loans
    }

    // 5. EMI Schedules: Open to authenticated users (needed for employees to mark payments)
    match /emi_schedule/{loanId} {
      allow read, write: if isSignedIn();
    }

    // 6. Financials: Strictly Admin Only
    match /expenses/{docId} {
      allow read, write: if isAdmin();
    }
    match /wallet_transactions/{docId} {
      allow read, write: if isAdmin();
    }

    // 7. Settings: Everyone can read (e.g., company profile), only Admin writes
    match /settings/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}